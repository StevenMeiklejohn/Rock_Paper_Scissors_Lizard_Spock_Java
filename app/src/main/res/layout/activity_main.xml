<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.codeclan.com.rockpaperscissors2.MainActivity">


    <ImageButton
        android:id="@+id/rules"
        android:onClick="onRulesButtonClicked"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/rules"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Choice:"
        android:id="@+id/editText"
        android:layout_below="@+id/rules"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/b_rock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/rock_new"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:layout_marginTop="44dp" />

    <ImageButton
        android:id="@+id/b_paper"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/paper_new"
        android:layout_alignTop="@+id/b_rock"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/b_scissors"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/scissors_new"
        android:layout_alignTop="@+id/b_paper"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <ImageButton
        android:id="@+id/b_lizard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/lizard_new"
        android:layout_below="@+id/b_paper"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="160dp"/>

    <ImageButton
        android:id="@+id/b_spock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/spock_new"
        android:layout_alignTop="@+id/b_lizard"
        android:layout_toRightOf="@+id/b_lizard"
        android:layout_marginLeft="44dp"/>






    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Choice:"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b_spock"
        android:paddingTop="50dp"/>

    <ImageView
        android:id="@+id/iv_computer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/rock_new"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="63dp"
        android:layout_below="@+id/iv_computer"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
